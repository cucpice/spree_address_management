<%#= render :partial => 'spree/admin/shared/order_tabs', :locals => { :current => 'Addresses' } %>

<% content_for :page_title do %>
  <i class="fa fa-arrow-right"></i> <%= I18n.t(:addresses, scope: :address_book) %>
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:new_address), new_admin_address_path(user_id: @user.id), :icon => 'plus' %></li>
  <li><%#= button_link_to Spree.t(:back_to_addresses_list), admin_addresses_url(user_id: @user.id), :icon => 'arrow-left' %></li>
<% end %>

<fieldset data-hook="admin_user_addresses" id="admin_user_edit_addresses" class="alpha twelve columns">
  <legend><%= Spree.t('addresses', :scope => 'admin.user') %></legend>

  <% unless @user_addresses.blank? %>
    <table id="user_addresses">
      <thead>
        <tr class="<%= cycle('even', 'odd') %>">
          <th><%= I18n.t(:address, scope: :address_book) %></th>
          <th class="align-center"><%= I18n.t(:type, scope: :address_book) %></th>
          <th class="align-center"><%= I18n.t(:def_bill, scope: :address_book) %></th>
          <th class="align-center"><%= I18n.t(:def_ship, scope: :address_book) %></th>
          <th class="actions"></th>
        </tr>
      </thead>
      <tbody>
      <%= form_for @user, url: update_addresses_admin_addresses_path(user_id: @user.id), method: :put do |f| %>
        <% @user_addresses.each do |address| %>
          <tr class="<%= cycle('even', 'odd') %>">
            <td><%= address %></td>
            <td class="align-center">
              <% if address == @user.bill_address %>
                Billing
              <% elsif address == @user.ship_address %>
                Shipping
              <% else %>
                N/A
              <% end %>
            </td>
            <td class="align-center">
              <%= radio_button_tag 'user[bill_address_id]', address.id, address == @user.bill_address %>
            </td>
            <td class="align-center">
              <%= radio_button_tag 'user[ship_address_id]', address.id, address == @user.ship_address %>
            </td>
            <td class="actions">
              <%= link_to_edit_url edit_admin_address_url(address, user_id: @user.id), :no_text => true %>
            </td>
          </tr>
        <% end %>
        <div class="row">
          <div class="alpha twelve columns">
            <%= f.submit 'Update Default Addresses' %>
          </div>
        </div>
      <% end %>
      </tbody>
    </table>
  <% end %>
</fieldset>
