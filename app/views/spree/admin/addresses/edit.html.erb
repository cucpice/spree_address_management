<%#= render :partial => 'spree/admin/shared/order_tabs', :locals => { :current => 'Addresses' } %>

<% content_for :page_title do %>
  <%= link_to "#{Spree.t(:editing_user)} #{@user.email}", edit_admin_user_url(@user) %>
<% end %>

<% content_for :page_actions do %>
  <li><%= button_link_to Spree.t(:new_address), new_admin_address_path(user_id: @user.id), :icon => 'plus' %></li>
  <li><%= button_link_to Spree.t(:back_to_addresses_list), admin_addresses_url(user_id: @user.id), :icon => 'arrow-left' %></li>
<% end %>

<div data-hook="admin_user_edit_form_header">
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>
</div>

<div data-hook="admin_user_address_edit_form">
  <%= form_for @address, url: admin_address_path(@address, user_id: @user), method: :put do |f| %>
    <div class="row">
      <div class="alpha twelve columns">
        <fieldset data-hook="admin_user_addresses" id="admin_user_edit_addresses" class="alpha twelve columns">
          <legend><%= I18n.t(:address, :scope => :address_book) %></legend>

          <%= render :partial => 'address_form', :locals => { :f => f } %>

          <div data-hook="admin_user_edit_form_button">
            <%= render :partial => 'spree/admin/shared/edit_resource_links', :locals => { :collection_url => admin_addresses_url(user_id: @user.id) } %>
          </div>
        </fieldset>
      </div>
    </div>

  <% end %>
</div>
